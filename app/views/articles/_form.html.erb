<%= form_with(model: article, local: true) do |form| %>
  <div class="mb-3 row">
    <%= form.label :title, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :description, class: "form-control", rows: 10 %>
    </div>
  </div>

  <div class="form-group row text-center">
    <div class="col">
      <%= form.submit "Create Article", class: "btn btn-outline-light btn-lg", style: "width: auto;" %>
    </div>
  </div>
<% end %>
