<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div class="form-group row">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :title, class: "col-2 col-form-label", style: "display: block" %>
    <div class="col-10">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :description, class: "col-2 col-form-label", style: "display: block" %>
    <div class="col-10">
      <%= form.text_area :description, class: "form-control", rows: 10 %> <!-- Ensure this is plain text -->
    </div>
  </div>

 <div class="form-group row text-center">
    <div class="col">
      <%= form.submit "Create Article", class: "btn btn-outline-light btn-lg", style: "width: auto;" %>
    </div>
  </div>
<% end %>
