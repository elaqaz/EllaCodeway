<p style="color: green"><%= notice %></p>

<div id="page-content" class="bg-light p-4">
  <!-- Container for header and button -->
  <div class="position-relative mb-4">
    <h1 class="text-center mb-0">Listing all articles</h1>
    <div class="position-absolute" style="top: 0; right: 0;">
      <%= link_to 'Create New Article', new_article_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-2">
          <div class="card text-center shadow mb-3 bg-body-tertiary rounded">
            <div class="card-header font-italic">
              by Ella
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to article.title, article_path(article), class: 'text-success' %>
              </h5>
              <p class="card-text"><%= truncate(article.description, length: 100) %></p>
              <div class="d-flex justify-content-center gap-2">
                <%= link_to 'View', article_path(article), class: 'btn btn-success' %>
                <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-primary' %>
                <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </div>
            <div class="card-footer text-muted">
              Created about <%= time_ago_in_words(article.created_at) %> ago, edited about <%= time_ago_in_words(article.updated_at) %> ago
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


