<div id="page-content" class="bg-light p-4">
  <div class="row justify-content-md-center mt-4">
    <div class="col-md-8">
      <div class="card text-center shadow mb-3 bg-body-tertiary rounded">
        <div class="card-header font-italic">
          by Ella
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= @article.title %></h5>
          <p class="card-text"><%= @article.description %></p>
        </div>
        <div class="card-footer text-muted">
          Created about <%= time_ago_in_words(@article.created_at) %> ago, edited about <%= time_ago_in_words(@article.updated_at) %> ago
        </div>
      </div>
      <div class="d-flex justify-content-center gap-2 mt-3">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to "Back to articles", articles_path, class: "btn btn-secondary" %>
        <%= button_to "Destroy this article", @article, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
